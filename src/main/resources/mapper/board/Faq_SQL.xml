<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="faq">

	<!-- FAQ 리스트 불러오기 -->
	<select id="selectFaqList" parameterType="hashmap" resultType="hashmap">	
		<![CDATA[
			SELECT 
				NOTICE_NO, NOTICE_TITLE, NOTICE_CONTENT 
			FROM 
				NOTICE 
			WHERE NOTICE_GUBUN = '1'
		]]>
	</select>
	
	<!-- FAQ 답변 불러오기 -->
	<select id="selectFaqList2" parameterType="hashmap" resultType="hashmap">	
		<![CDATA[
			SELECT 
				NOTICE_NO, NOTICE_CONTENT		
			FROM 
				NOTICE
			WHERE 
				NOTICE_GUBUN = '1'
			ORDER BY NOTICE_NO DESC
		]]>
	</select>
	
	<!-- FAQ 리스트 등록하기 -->
	<insert id="insertFaq" parameterType="hashmap"
	useGeneratedKeys="true" keyProperty="NOTICE_NO">

		<![CDATA[
			INSERT INTO NOTICE
				( NOTICE_NO, NOTICE_GUBUN, NOTICE_TITLE )
			VALUES
				( NOTICE_NO_SEQ.nextval ,
				'1' ,
			#{NOTICE_TITLE})
			ORDER BY NOTICE_NO DESC
		]]>
	</insert>
	
	<!-- FAQ 답변 등록하기 -->
	<insert id="insertFaq2" parameterType="hashmap"
	useGeneratedKeys="true" keyProperty="NOTICE_NO">

		<![CDATA[
			INSERT INTO NOTICE
			( NOTICE_NO, NOTICE_GUBUN, NOTICE_CONTENT )
			VALUES
			( NOTICE_NO_SEQ.nextval ,
			1 ,
			#{NOTICE_CONTENT} )
			ORDER BY NOTICE_NO DESC	
		]]>
	</insert>
	

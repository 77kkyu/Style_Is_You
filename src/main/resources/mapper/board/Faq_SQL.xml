	<!-- FAQ 답변 수정하기 -->
	<update id="updateFaq" parameterType="hashmap">
		<![CDATA[
			UPDATE NOTICE
			SET
				NOTICE_CONTENTS = #{NOTICE_CONTENTS}
			WHERE
				NOTICE_NO = #{NOTICE_NO}
		]]>
	</update>
	
	<!-- FAQ 삭제하기 -->
	<delete id="deleteFaq" parameterType="hashmap">
		<![CDATA[
			DELETE FROM NOTICE
			WHERE 
				NOTICE_NO = #{NOTICE_NO}
		]]>
	</delete>

</mapper>